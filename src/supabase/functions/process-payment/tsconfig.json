{
  "compilerOptions": {
    "target": "ES2021",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "dom", "dom.iterable"],
    "types": ["@types/node"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowImportingTsExtensions": true,
    "paths": {
      "std/*": ["https://deno.land/std@0.208.0/*"],
      "stripe": ["https://esm.sh/stripe@13.10.0?target=deno"]
    },
    "typeRoots": [
      "./deno.d.ts"
    ]
  },
  "include": [
    "*.ts",
    "*.tsx",
    "*.js",
    "*.jsx"
  ]
}
